{
    "compilerOptions": {
      "target": "ES2020",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "declaration": true,
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/*.ts"]
}
  