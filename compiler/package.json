{
  "name": "squiffy",
  "version": "6.0.0-alpha.0",
  "description": "A tool for creating multiple-choice interactive stories",
  "dependencies": {
    "finalhandler": "^1.3.1",
    "glob": "^11.0.0",
    "jszip": "^3.9.1",
    "marked": "^13.0.2",
    "serve-static": "^1.16.2",
    "yargs": "^17.7.2"
  },
  "author": "Alex Warren",
  "contributors": [
    "CrisisSDK",
    "mrangel",
    "Luis Felipe Morales"
  ],
  "repository": {
