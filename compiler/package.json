    "url": "git+https://github.com/textadventures/squiffy.git"
  },
  "license": "MIT",
  "bin": {
    "squiffy": "squiffy.js"
  },
  "preferGlobal": true,
  "devDependencies": {
    "@types/finalhandler": "^1.2.3",
    "@types/node": "^22.5.5",
    "@types/serve-static": "^1.15.7",
    "@types/yargs": "^17.0.33",
    "shx": "^0.3.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
